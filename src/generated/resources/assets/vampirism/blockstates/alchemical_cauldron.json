{
  "multipart": [
    {
      "apply": {
        "model": "vampirism:block/alchemy_cauldron"
      }
    },
    {
      "apply": {
        "model": "vampirism:block/alchemy_cauldron_fire"
      },
      "when": {
        "lit": "true"
      }
    },
    {
      "apply": {
        "model": "vampirism:block/alchemy_cauldron_liquid"
      },
      "when": {
        "liquid": "1"
      }
    },
    {
      "apply": {
        "model": "vampirism:block/cauldron_boiling"
      },
      "when": {
        "liquid": "2"
      }
    }
  ]
}